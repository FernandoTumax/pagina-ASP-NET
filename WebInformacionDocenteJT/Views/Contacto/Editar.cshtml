@model WebInformacionDocenteJT.Models.Contacto

@{
    ViewBag.Title = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row" style="margin-top:30px">
    <div class="col-sm-12">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h4>Editar Contacto</h4>
            </div>
            <div class="panel-body">
                <form action="@Url.Action("EditContact", "Contacto")" method="post">
                    <input type="hidden" readonly class="form-control" name="IdContacto" value="@Html.DisplayTextFor(m => m.IdContacto)" />
                    <div class="form-group">
                        <label for="txtNombre">Nombres</label>
                        <input type="text" class="form-control" name="Nombres" value="@Html.DisplayTextFor(m => m.Nombres)" />
                    </div>
                    <div class="form-group">
                        <label for="txtNombre">Apellidos</label>
                        <input type="text" class="form-control" name="Apellidos" value="@Html.DisplayTextFor(m => m.Apellidos)" />
                    </div>
                    <div class="form-group">
                        <label for="txtNombre">Telefono</label>
                        <input type="text" class="form-control" name="Telefono" value="@Html.DisplayTextFor(m => m.Telefono)" />
                    </div>
                    <div class="form-group">
                        <label for="txtNombre">Correo</label>
                        <input type="text" class="form-control" name="Correo" value="@Html.DisplayTextFor(m => m.Correo)" />
                    </div>
                    <button type="submit" class="btn btn-primary">Actualizar</button>
                    <a class="btn btn-danger" href="@Url.Action("Inicio", "Contacto")">Volver</a>
                </form>
            </div>
        </div>
    </div>
</div>

